<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <TextView
        android:id="@+id/qrcode_tv_scanhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="扫一扫,查询或添加"
        android:textColor="@color/primary_blue"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/qrcode_iv_qrcode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/qrcode_tv_scanhead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/scan_qrcode_bg"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/qrcode_tv_setcourse"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qrcode_iv_qrcode"
        android:textColor="@color/primary_blue"
        android:text="设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/qrcode_ll_secourse"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/qrcode_tv_setcourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:id="@+id/qrcode_tv_courseName"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/qrcode_tv_setcourse"
            android:textColor="@color/primary_blue"
            android:text="我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:id="@+id/qrcode_tv_cancel"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/qrcode_tv_setcourse"
            android:textColor="@color/primary_blue"
            android:text="取消设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
