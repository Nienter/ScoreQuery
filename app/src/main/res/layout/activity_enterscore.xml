<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey_background"
        android:id="@+id/enterscore_tv_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/tv2_shape"
        android:padding="10dp"
        android:hint="请选择学期"
        android:textSize="18sp" />
    <TextView
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey_background"
        android:id="@+id/enterscore_tv_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/tv2_shape"
        android:padding="10dp"
        android:hint="请选择课程"
        android:textSize="18sp" />

    <EditText
        android:textColor="@android:color/white"
        android:inputType="number"
        android:textColorHint="@color/grey_background"
        android:id="@+id/enterscore_edt_studentNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/tv2_shape"
        android:padding="10dp"
        android:hint="请输入学号"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/enterscore_ll_score"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@color/grey_background"
            android:id="@+id/enterscore_edt_expscore"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/tv2_shape"
            android:padding="10dp"
            android:hint="请输入实验课成绩"
            android:textSize="18sp" />
        <EditText
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@color/grey_background"
            android:id="@+id/enterscore_edt_peacescore"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/tv2_shape"
            android:padding="10dp"
            android:hint="请输入平时课成绩"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/enterscore_ll_score1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@color/grey_background"
            android:id="@+id/enterscore_edt_midscore"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/tv2_shape"
            android:padding="10dp"
            android:hint="请输入期中成绩"
            android:textSize="18sp" />
        <EditText
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@color/grey_background"
            android:id="@+id/enterscore_edt_finalscore"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/tv2_shape"
            android:padding="10dp"
            android:hint="请输入期末成绩"/>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textColorHint="@color/grey_background"
        android:id="@+id/enterscore_tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/tv2_shape"
        android:padding="10dp"
        android:hint="请选择考试结果"
        android:textSize="18sp" />
</LinearLayout>