<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/titlebar_rl_titlebar"
        android:background="@color/primary_blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <ImageView
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/titlebar_iv_left"
            android:src="@mipmap/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:id="@+id/titlebar_tv_title"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/titlebar_tv_right"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@id/titlebar_rl_titlebar"
        android:id="@+id/titlebar_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>